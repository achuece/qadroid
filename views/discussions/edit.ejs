<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= discussion.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/discussion/<%= discussion._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="discussion[title]" value="<%= discussion.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="discussion[image]" value="<%= discussion.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="discussion[description]" value="<%= discussion.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>